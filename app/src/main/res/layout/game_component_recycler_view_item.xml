<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/gameComponentName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/gameComponentEnabledCheckbox"
            app:layout_constraintHorizontal_bias="0.478"
            android:layout_weight="1" />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameComponentEnabledCheckbox"
            app:layout_constraintTop_toTopOf="@+id/gameComponentName"
            app:layout_constraintBottom_toBottomOf="@+id/gameComponentName"
            app:layout_constraintEnd_toStartOf="@+id/gameComponentInfoButton"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

    <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/gameComponentInfoButton"
            app:layout_constraintTop_toTopOf="@+id/gameComponentName"
            app:layout_constraintBottom_toBottomOf="@+id/gameComponentName"
            android:background="@drawable/info" />

</androidx.constraintlayout.widget.ConstraintLayout>