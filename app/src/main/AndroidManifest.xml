<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.thequietcroc.legendary">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Legendary">
        <activity
                android:name=".activities.FilterGameSetActivity"
                android:parentActivityName=".activities.FilterSelectMenuActivity">
        </activity>
        <activity
                android:name=".activities.FilterHenchmenActivity"
                android:parentActivityName=".activities.FilterSelectMenuActivity">
        </activity>
        <activity
                android:name=".activities.FilterHeroActivity"
                android:parentActivityName=".activities.FilterSelectMenuActivity">
        </activity>
        <activity
                android:name=".activities.FilterMastermindActivity"
                android:parentActivityName=".activities.FilterSelectMenuActivity">
        </activity>
        <activity
                android:name=".activities.FilterSchemeActivity"
                android:parentActivityName=".activities.FilterSelectMenuActivity">
        </activity>
        <activity
                android:name=".activities.FilterVillainsActivity"
                android:parentActivityName=".activities.FilterSelectMenuActivity">
        </activity>
        <activity
                android:name=".activities.FilterSelectMenuActivity"
                android:parentActivityName=".activities.MainActivity">
        </activity>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>